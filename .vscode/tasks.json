{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "-o", "main.exe",
                "-IC:/msys64/mingw64/include/gtk-3.0",
                "-IC:/msys64/mingw64/include/glib-2.0",
                "-IC:/msys64/mingw64/lib/glib-2.0/include",
                "-IC:/msys64/mingw64/include/atk-1.0",
                "-IC:/msys64/mingw64/include/cairo",
                "-IC:/msys64/mingw64/include/gdk-pixbuf-2.0",
                "-IC:/msys64/mingw64/include/harfbuzz",
                "-IC:/msys64/mingw64/include/pango-1.0",
                "-LC:/msys64/mingw64/lib",
                "-lgtk-3",
                "-lgdk-3",
                "-lgobject-2.0",
                "-lgmodule-2.0",
                "-lgio-2.0",
                "-lglib-2.0",
                "-lpango-1.0",
                "-lpangocairo-1.0",
                "-lcairo",
                "-lgdk_pixbuf-2.0",
                "-latk-1.0",
                "-lharfbuzz",
                "-lm",
                "-lssl",     // Adiciona biblioteca OpenSSL para SSL
                "-lcrypto"   // Adiciona biblioteca OpenSSL para criptografia
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}